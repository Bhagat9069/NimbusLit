<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_margin="5dp"
    android:padding="10dp"
    android:gravity="center_vertical"
android:id="@+id/friends_request_layout"
android:layout_height="wrap_content">

<ImageButton
    android:layout_width="65dp"
    android:layout_height="65dp"
    android:id="@+id/review_1"
    android:layout_centerVertical="true"
    android:layout_alignParentStart="true"
    android:background="@drawable/white_circle_border"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:ellipsize="end"
    android:singleLine="true"
    android:textSize="@dimen/app_text_size"
    style="@style/NormalText"
    android:layout_centerVertical="true"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="5dp"
    android:gravity="center"
    android:layout_toEndOf="@+id/review_1"
    android:layout_toStartOf="@+id/add_device"
    android:textAllCaps="true"
    android:text="uid:3r5#12"
    />



<Button
    android:layout_width="120dp"
    android:layout_height="30dp"
    android:textColor="@color/white"
    android:id="@+id/add_device"
    android:text="Add"
    android:layout_alignParentEnd="true"
    android:elevation="5dp"
    style="@style/HeaderText"
    android:layout_centerVertical="true"
    android:background="@drawable/rounded_button_yellow"

    />
 </RelativeLayout>
