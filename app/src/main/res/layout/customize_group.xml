<?xml version="1.0" encoding="utf-8"?>
<com.nimbuslit.CustomView.BlurLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:blurkit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerInParent="true"
    android:id="@+id/add_smart_blur"
    blurkit:blk_cornerRadius="10dp"
    blurkit:blk_blurRadius="10"
    blurkit:blk_downscaleFactor="0.9"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/white_border_back"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/white_circle"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/group_device_list">

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Group Name 1"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/medium_app_text_size"
                style="@style/NormalText"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dimming Setting"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:textSize="@dimen/app_text_size"
                style="@style/NormalText"
                android:textColor="@color/white"
                />
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:thumb="@drawable/white_circle"
                android:progress="10"
                android:layout_marginTop="20dp"
                android:theme="@style/AppTheme.SeekBar"
               />
            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Save"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimary"
                style="@style/HeaderText"
                android:background="@drawable/rounded_button_white"/>
        </LinearLayout>
    </ScrollView>
</com.nimbuslit.CustomView.BlurLayout>
