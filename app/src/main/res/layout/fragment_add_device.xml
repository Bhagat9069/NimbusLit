<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:blurkit="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Fragments.AddDeviceFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/HeaderText"
    android:textAllCaps="true"
    android:layout_marginTop="10dp"
    android:textSize="@dimen/large_app_text_size"
    android:textColor="@color/colorPrimary"
    android:text="Add Smart Device"/>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/NormalText"
        android:layout_marginTop="5dp"
        android:textAllCaps="true"
    android:textColor="@color/black"
    android:text="Customize and set your devices"/>

<ListView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:listitem="@layout/device_list_item"
    android:id="@+id/device_list">

</ListView>
    </LinearLayout>
</RelativeLayout>