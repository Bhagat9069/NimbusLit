<?xml version="1.0" encoding="utf-8"?>
<com.nimbuslit.CustomView.BlurLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:blurkit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerInParent="true"
    android:id="@+id/add_smart_blur"
    blurkit:blk_cornerRadius="10dp"
    blurkit:blk_blurRadius="10"
    blurkit:blk_downscaleFactor="0.9"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/white_border_back"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/white_circle"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UID:3R5#12"
                style="@style/HeaderText"
                android:padding="5dp"
                android:textSize="@dimen/medium_app_text_size"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Device Name"
                android:textSize="@dimen/app_text_size"
                style="@style/NormalText"
                android:textColor="@color/white"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:orientation="vertical"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="160dp">
    <com.nimbuslit.CustomView.NonScrollListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/non_scroll_listView_text"
        tools:listitem="@layout/non_scroll_listitem">
    </com.nimbuslit.CustomView.NonScrollListView>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add new group"
            android:textColor="#9B9B9B"
            android:textSize="@dimen/app_text_size"
            android:textAllCaps="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"

            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_add"/>
    </RelativeLayout>
</LinearLayout>
            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Add Device"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimary"
                style="@style/HeaderText"
                android:background="@drawable/rounded_button_white"/>
        </LinearLayout>
    </ScrollView>
</com.nimbuslit.CustomView.BlurLayout>
