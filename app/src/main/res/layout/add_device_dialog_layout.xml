<?xml version="1.0" encoding="utf-8"?>
<com.nimbuslit.CustomView.BlurLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:id="@+id/add_smart_blur"
    blurkit:blk_cornerRadius="10dp"
    blurkit:blk_blurRadius="10"
    blurkit:blk_downscaleFactor="0.9"
    xmlns:blurkit="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/white_border_back"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/white_circle"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UID:3R5#12"
                style="@style/HeaderText"
                android:padding="5dp"
                android:textSize="@dimen/medium_app_text_size"
                android:textColor="@color/white"/>
            <com.nimbuslit.CustomView.WhiteUnderLineEdit
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Set Name"
                android:id="@+id/add_device_alertLayout"

                style="@style/NormalText"
                android:textSelectHandle="@color/white"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:id="@+id/add_device_group_list"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                />

            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Add Device"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimary"
                style="@style/HeaderText"
                android:background="@drawable/rounded_button_white"/>
        </LinearLayout>
    </ScrollView>
</com.nimbuslit.CustomView.BlurLayout>
